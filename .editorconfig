# EditorConfig helps maintain consistent coding styles across different editors and IDEs
# Documentation: https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Markdown : ne pas retirer les espaces Ã  la fin des lignes (utile pour les sauts de ligne)
[*.md]
trim_trailing_whitespace = false

# YAML : indentation 2 espaces
[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

# JSON : indentation 2 espaces
[*.json]
indent_size = 2

# HTML/CSS/JS/TS/Vue
[*.{html,css,scss,js,ts,vue}]
indent_size = 2

# Special case for Makefiles (requires tabs)
[Makefile]
indent_style = tab
